<Gerenciador>
    Menu:
        name: 'menu'
    Arduino:
        name: 'arduino'
    Calculadora:
        name: 'calculadora'

<Menu>
    canvas:
        Color:
            rgb: 210.00, 210.00, 30.00
        Rectangle: #woohoo!!!
            size: self.size
            pos: self.pos
    BoxLayout:
        padding: 100
        orientation: 'vertical'
        spacing: 50

        Image:
            size_hint_y: None
            source:'una.jpeg'
            height: 50

        Button:
            text: 'Arduino'
            on_release: app.root.current = 'arduino'
        Button:
            text: 'Calculadora'
            on_release: app.root.current = 'calculadora'
        Button:
            text: 'Sair'
            on_release: app.stop()

<Arduino>

    canvas:
        Color:
            rgb: 210.00, 210.00, 30.00
        Rectangle: #woohoo!!!
            size: self.size
            pos: self.pos


    BoxLayout:

        orientation: 'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'Arduino'
                    image:'una2.png'
                    on_release: app.root.current='menu'
                ActionButton:
                    text: 'Voltar'
                    on_release: app.root.current='menu'

        ScrollView:
            BoxLayout:
                id: box
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height

        BoxLayout:

            size_hint_y: None
            height: 60
            Button:
                text:'voltar'
                size_hint_x: None
                width: 60
                on_release: app.root.current='menu'
            Button:
                text:'Visualizar Temperatura'
                size_hint_y: None
                height: 60
                on_release: root.addWidget()

<Calculadora>
    canvas:
        Color:
            rgb: 210.00, 210.00, 30.00
        Rectangle: #woohoo!!!
            size: self.size
            pos: self.pos
    orientation:'horizontal'

    BoxLayout:
        orientation:'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'Calculadora'
                    image:'una2.png'
                    on_release: app.root.current='menu'
                ActionButton:
                    text: 'Voltar'
                    on_release: app.root.current='menu'
        BoxLayout:
            Image:
                source:'una.jpeg'
                size_hint_x: None
            TextInput:
                id: valor
            Button:
                text:'voltar'
                size_hint_x: None
                width: 60
                on_release: app.root.current='menu'

        BoxLayout:
            padding: 2
            spacing: 2
            Button:
                text: '9'
                on_release: valor.text = (valor.text)+'9'
                spacing: 1
            Button:
                text: '8'
                on_release: valor.text = (valor.text)+'8'

            Button:
                text: '7'
                on_release: valor.text = (valor.text)+'7'
            Button:
                text: '-'
                on_release: valor.text = (valor.text)+'-'
        BoxLayout:
            padding: 2
            spacing: 2
            Button:
                text: '6'
                on_release: valor.text = (valor.text)+'6'
            Button:
                text: '5'
                on_release: valor.text = (valor.text)+'5'
            Button:
                text: '4'
                on_release: valor.text = (valor.text)+'4'
            Button:
                text: '+'
                on_release: valor.text = (valor.text)+'+'
        BoxLayout:
            padding: 2
            spacing: 2
            Button:
                text: '3'
                on_release: valor.text = (valor.text)+'3'
            Button:
                text: '2'
                on_release: valor.text = (valor.text) + str(int(1+1))
            Button:
                text: '1'
                on_release: valor.text = (valor.text)+'1'
            Button:
                text: '*'
                on_release: valor.text = (valor.text)+'*'
        BoxLayout:
            padding: 2
            spacing: 2
            Button:
                text: 'AC'
                on_release: valor.text = (valor.text)=''
            Button:
                text: '0'
                on_release: valor.text = (valor.text)+'0'
            Button:
                text: '='
                on_release: valor.text = str(eval(valor.text))

            Button:
                text: '/'
                on_release: valor.text = (valor.text)+'/'

<Temp>
    size_hint_y: None
    height:100


    Label:
        id: label
        font_size: 15
        color: 0, 0, 0, 100
    Button:
        text: 'X'
        size_hint_x: None
        width: 60
        on_release: app.root.get_screen('arduino').ids.box.remove_widget(root)



